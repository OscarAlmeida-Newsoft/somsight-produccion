@model SOMSight.Models.Campaign.EditCampaignVM

@using (Ajax.BeginForm("Edit", "AdminCampaign", null,
                                            new AjaxOptions
                                            {
                                                HttpMethod = "POST",
                                                InsertionMode = InsertionMode.Replace,
                                                OnSuccess = "OnSuccess",
                                                OnFailure = "OnFailure",
                                                OnBegin = "On_Begin",
                                                UpdateTargetId = "Edit"
                                            },
                                            new
                                            {
                                                @id = "FormEdit"
                                            }
                                        ))
{
    @Html.AntiForgeryToken()

    <div class="modal-header">

        <h4 class="modal-title">Edit</h4>

    </div>
    <div class="modal-body">
        <div class="panel-body">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-3">
                        @Html.HiddenFor(model => model.Id)
                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="form-group">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Status, new { @class = "col-md-2 control-label" })
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="form-group">

                            @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-check-input" } })
                            @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.IsDefaultCampaign, new { @class = "col-md-2 control-label" })
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="form-group">

                            @Html.EditorFor(model => model.IsDefaultCampaign, new { htmlAttributes = new { @class = "form-check-input" } })
                            @Html.ValidationMessageFor(m => m.IsDefaultCampaign, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.DefaultPlanTypeId, new { @class = "col-md-2 control-label" })
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="form-group">

                            @Html.DropDownListFor(model => model.DefaultPlanTypeId, Model.SelectListPlan, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.DefaultPlanTypeId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="form-group">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <input type="submit" value="Edit" id="btnSave" name="cmd" class="btn btn-success" />
        </div>
    </div>

}



