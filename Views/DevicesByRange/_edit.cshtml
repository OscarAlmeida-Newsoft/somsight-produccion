@model SOMSight.Models.Plans.EditDevicesByRangeVM

@using (Ajax.BeginForm("Edit", "DevicesByRange", null,
                                                                                            new AjaxOptions
                                                                                            {
                                                                                                HttpMethod = "POST",
                                                                                                InsertionMode = InsertionMode.Replace,
                                                                                                OnSuccess = "OnSuccess",
                                                                                                OnFailure = "OnFailure",
                                                                                                OnBegin = "On_Begin",
                                                                                                UpdateTargetId = "Edit"
                                                                                            },
                                                                                            new
                                                                                            {
                                                                                                @id = "FormEdit"
                                                                                            }
                                                                                        ))
{
    @Html.AntiForgeryToken()

    <div class="modal-header">

        <h4 class="modal-title">Create</h4>

    </div>
    <div class="modal-body">
        <div class="panel-body">
            <div class="col-md-12">
                
                <div class="row">
                    <div class="col-md-3">
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.TenantId)
                        <div class="form-group">
                            @Html.LabelFor(model => model.MinDevices, htmlAttributes: new { @class = "control-label col-md-2" })
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="form-group">
                            @Html.EditorFor(model => model.MinDevices, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MinDevices, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaxDevices, htmlAttributes: new { @class = "control-label col-md-2" })
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="form-group">
                            @Html.EditorFor(model => model.MaxDevices, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaxDevices, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="form-group">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <input type="submit" value="Edit" id="btnSave" name="cmd" class="btn btn-success" />
        </div>
    </div>

}

