@model SOMSight.Models.Plans.EditSOMSightPlanVM

@using (Ajax.BeginForm("Edit", "AdminPlan", null,
                                                                                new AjaxOptions
                                                                                {
                                                                                    HttpMethod = "POST",
                                                                                    InsertionMode = InsertionMode.Replace,
                                                                                    OnSuccess = "OnSuccess",
                                                                                    OnFailure = "OnFailure",
                                                                                    OnBegin = "On_Begin",
                                                                                    UpdateTargetId = "Edit"
                                                                                },
                                                                                new
                                                                                {
                                                                                    @id = "FormEdit"
                                                                                }
                                                                            ))
{
    @Html.AntiForgeryToken()

    <div class="modal-header">

        <h4 class="modal-title">Create</h4>

    </div>
    <div class="modal-body">
        <div class="panel-body">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-3">
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.TenantId)
                        <div class="form-group">
                            @Html.LabelFor(model => model.PlanName, htmlAttributes: new { @class = "control-label col-md-2" })
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="form-group">
                            @Html.EditorFor(model => model.PlanName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PlanName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.IsDefault, new { @class = "col-md-2 control-label" })
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="form-group">

                            @Html.EditorFor(model => model.IsDefault, new { htmlAttributes = new { @class = "form-check-input" } })
                            @Html.ValidationMessageFor(m => m.IsDefault, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.MarkAsStar, new { @class = "col-md-2 control-label" })
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="form-group">

                            @Html.EditorFor(model => model.MarkAsStar, new { htmlAttributes = new { @class = "form-check-input" } })
                            @Html.ValidationMessageFor(m => m.MarkAsStar, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.IsHighestPlan, new { @class = "col-md-2 control-label" })
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="form-group">

                            @Html.EditorFor(model => model.IsHighestPlan, new { htmlAttributes = new { @class = "form-check-input" } })
                            @Html.ValidationMessageFor(m => m.IsHighestPlan, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Visible, new { @class = "col-md-2 control-label" })
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="form-group">

                            @Html.EditorFor(model => model.Visible, new { htmlAttributes = new { @class = "form-check-input" } })
                            @Html.ValidationMessageFor(m => m.Visible, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="form-group">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <input type="submit" value="Edit" id="btnEdit" name="cmd" class="btn btn-success" />
         </div>
    </div>

}
