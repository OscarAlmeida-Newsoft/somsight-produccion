@model SOMSightModels.PowerBIEmbedded.EmbedConfig

@using SOMSight.Utils
@using SOMSight.Utils.Extensions

@{
    ViewBag.Title = TranslatorHelper.TranslateTextByIdentifier(Model.PageTitleTranslatorIdentifier);
    ViewBag.Active = Model.PageTitleTranslatorIdentifier;
    Layout = "~/Views/Shared/_LayoutLogged.cshtml";
    var _user = Session.GetCurrentUser();
}

<script src="https://npmcdn.com/es6-promise@3.2.1"></script>
<script src="~/Scripts/Custom/powerBI/powerbi.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/styleBI.css">

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div id="errorWrapper">
        <h2>
            Error
        </h2>
        <pre>
            @Model.ErrorMessage
        </pre>
    </div>

    return;
}


<!--================================= TITULO ======================================-->
<div class="container" id="titulo_general">
    <div class="centro">
        <h1 class="titulo">
            <span class="texto">@TranslatorHelper.TranslateTextByIdentifier(Model.PageTitleTranslatorIdentifier)</span>
        </h1>
    </div>
</div>

<!--================================= PAGINA ======================================-->
<div id="" class="container gris sin_borde">
    <div class="container" id="titulo_general" style="padding-bottom:0px">
        <div class="centro">
            <h1 class="titulo">
                <span class="textonegro">
                    @*@{
                            ViewContext.Writer.Write(TranslatorHelper.TranslateTextByIdentifier("Benchmark_subtitle"));
                        }*@
                </span>
            </h1>
            <!--<div class="titulowelcome">
                <hr style="background-color: @_user.TenantSkin.TenantStyleTertiaryBackgroundColor">
            </div>-->
        </div>
    </div>

    <div class="seccion">
        <div class="centro" style="max-width:100%">
            <div id="embedContainer" class="mb-50" style="height:1150px"></div>
        </div>
    </div>
</div>


<script>
    // Read embed application token from Model
    var accessToken = "@Model.EmbedToken.Token";

    // Read embed URL from Model
    var embedUrl = "@Html.Raw(Model.EmbedUrl)";

    // Read report Id from Model
    var embedReportId = "@Model.Id";

    var filterList = @Html.Raw(Json.Encode(Model.FilterList));
    // Get models. models contains enums that can be used.
    var models = window['powerbi-client'].models;

    //report.setFilters([filter])
    //.then(function () {
    //    alert("Report filter was set.");
    //})
    //.catch(function (errors) {
    //    alert(errors);
    //});

    // Embed configuration used to describe the what and how to embed.
    // This object is used when calling powerbi.embed.
    // This also includes settings and options such as filters.
    // You can find more information at https://github.com/Microsoft/PowerBI-JavaScript/wiki/Embed-Configuration-Details.
    var config = {
        type: 'report',
        tokenType: models.TokenType.Embed,
        accessToken: accessToken,
        embedUrl: embedUrl,
        id: embedReportId,
        permissions: models.Permissions.All,
        settings: {
            filterPaneEnabled: true,
            navContentPaneEnabled: true
        }
    };


    if(filterList != null && filterList.length ){
        debugger;
        var _filterArray = [];
        filterList.forEach(function(filter){
            _filterArray.push({
                $schema: "http://powerbi.com/product/schema#basic",
                target: {
                    table: filter.Table,
                    column: filter.Column
                },
                operator: filter.Operator,
                values: filter.Values
            });
        });

        config.filters = _filterArray;
        config.settings.filterPaneEnabled = false;
    }

    // Get a reference to the embedded report HTML element
    var reportContainer = $('#embedContainer')[0];

    if ("@Model.Username" != "") {
        $("#RLS").prop('checked', true);
        $("#RLSdiv").show();
    }
    else {
        $("#RLS").prop('checked', false);
        $("#RLSdiv").hide();
    }

    if ("@Model.IsEffectiveIdentityRequired.GetValueOrDefault()" == "True") {
        $("#noRLSdiv").hide();
        $("#RLS").removeAttr("disabled");
        $("#RLS").change(function () {
            if ($(this).is(":checked")) {
                $("#RLSdiv").show(300);
            } else {
                $("#RLSdiv").hide(200);
            }
        });
    }
    else {
        $("#noRLSdiv").show();
    }
    // Embed the report and display it within the div container.
    var report = powerbi.embed(reportContainer, config);
</script>

