
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Please choose a tenant</h2>

<div class="col-md-3">

</div>
<div class="col-md-6">
    @using (Html.BeginForm("SetSelectedTenantId", "AdminChooseATenant")) {

        <input type="hidden" name="redirectUrl" value="@ViewBag.RedirectUrl" />
        <div id="grid-div"></div>
        
        <div class="text-center">
            <input type="submit" value="Select Tenant" class="btn  btn-primary"/>
        </div>
    }
    
</div>
<div class="col-md-3">

</div>
</div>


@section Scripts{
<script>
    $(document).ready(function(){
        loadingDiv.show();
        $.ajax({
            url: '@Url.Action("GetTenantRadioButtonList", "AdminChooseATenant")',
            type: 'GET',
            contentType: 'application/json; charset=utf-8'
        })
        .done(function (data) {
            $('#grid-div').html(data);
        })
        .fail(function (jqXHR, exception) {
            $('#vermasdiv').text(TextError(jqXHR, exception));
            $('#FailModal').modal({ backdrop: "static" }, { keyboard: false });
        })
        .always(function () {
            loadingDiv.hide();
        });
    
    });

</script>
}