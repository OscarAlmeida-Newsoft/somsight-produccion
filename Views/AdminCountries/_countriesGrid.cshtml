@model SOMSight.Models.Countries.CountriesGridVM
@using SOMSight.Utils.Helpers

<table id="gridTable" class="hover table-bordered stripe" cellspacing="0" width="100%">
    <thead class="cell-border" id="TH">
        <tr class="table-header">
            <th class="text-center text-uppercase">
                <label>@Html.LabelFor(x => x.columns.CountryName)</label>
            </th>
            <th class="text-center text-uppercase">
                <label>@Html.LabelFor(x => x.columns.Region)</label>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Details)
        {
            <tr data-itemid="@item.Id" class="table-item">
                <td>
                    @item.CountryName
                </td>
                <td>
                    @if (item.RegionId != null)
                    {
                        @item.Region.RegionName;
                    }
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2" class="text-center text-nowrap" style="text-align:center;">
                @Html.NSPagination(Model.PageSettings)
            </td>
        </tr>
    </tfoot>
</table>

<script>

    $(document).ready(function () {
        var ventana_alto = $(window).innerHeight();
        ventana_alto = (ventana_alto > 900) ? (ventana_alto / 1.8) : (ventana_alto / 3);
        var table = $('#gridTable').DataTable({
            "columnDefs": [
               { "width": "50%", "targets": 0 }
            ],
            "scrollY": ventana_alto,
            "scrollX": true,
            "info": false,
            "paging": false,
            "ordering": false,
            "filter": false
        });

        $('#TH').resize(function () {
            table.columns.adjust();
        })

        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    });
</script>
