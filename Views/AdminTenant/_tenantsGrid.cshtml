
@model SOMSight.Models.Tenant.TenantsGridVM
@using SOMSight.Utils.Helpers

<table id="gridTable" class="hover table-bordered stripe" cellspacing="0" width="100%">
    <thead class="cell-border" id="TH">
        <tr class="table-header">
            <th class="text-center text-uppercase">
                <label>@Html.LabelFor(x => x.Columns.Name)</label>
            </th>
            <th class="text-center text-uppercase">
                <label>@Html.LabelFor(x => x.Columns.TenantSubdomain)</label>
            </th>
            <th class="text-center text-uppercase">
                <label>@Html.LabelFor(x => x.Columns.TenantContactName)</label>
            </th>
            <th class="text-center text-uppercase">
                <label>@Html.LabelFor(x => x.Columns.TenantContactEmail1)</label>
            </th>
            <th class="text-center text-uppercase">
                <label>@Html.LabelFor(x => x.Columns.TenantContactTel1)</label>
            </th>
            @*<th class="text-center text-uppercase">
                <label>@Html.LabelFor(x => x.Columns.Status)</label>
            </th>*@
            <th class="text-center text-uppercase">
                <label>@Html.LabelFor(x => x.Columns.ShowUpgradeOption)</label>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Details)
        {
            <tr data-itemid="@item.Id" class="table-item">
                <td>
                    @item.Name
                </td>
                <td>
                    @item.TenantSubdomain
                </td>
                <td>
                    @item.TenantContactName
                </td>
                <td class="text-center">
                    @item.TenantContactEmail1
                </td>
                <td class="text-center">
                    @item.TenantContactTel1
                </td>
                @*<td class="text-center">
                    @if (item.Status)
                    {
                        <i class="glyphicon glyphicon-ok-sign"></i>
                    }
                    else
                    {
                        <i class="glyphicon glyphicon-minus-sign"></i>
                    }
                </td>*@
                <td class="text-center">
                    @item.ShowUpgradeOption
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="5" class="text-center text-nowrap" style="text-align:center;">
                @Html.NSPagination(Model.PageSettings)
            </td>
        </tr>
    </tfoot>
</table>

<script>

    $(document).ready(function () {
        var ventana_alto = $(window).innerHeight();
        ventana_alto = (ventana_alto > 900) ? (ventana_alto / 1.8) : (ventana_alto / 3);
        var table = $('#gridTable').DataTable({
            "columnDefs": [

            ],
            "scrollY": ventana_alto,
            "scrollX": true,
            "info": false,
            "paging": false,
            "ordering": false,
            "filter": false
        });

        $('#TH').resize(function () {

            table.columns.adjust();
        })


        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    });
</script>

