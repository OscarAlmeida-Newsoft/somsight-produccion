<!-- Advertencia (semáforo amarillo): Class "atention" -->
<div id="modalAttention" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="row">
                            <h2></h2>
                            <p></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <a href="" id="boton_cancel_alerta_modal_atention" class="btn btn-default" data-dismiss="modal">
                        @TranslatorHelper.TranslateTextByIdentifier("Semaforo_Boton_Cancelar")
                    </a>
                    <a href="" id="boton_alerta_modal_atention" class="btn btn-success" >
                        @TranslatorHelper.TranslateTextByIdentifier("Semaforo_Boton_Ok")
                    </a>
                </div>
