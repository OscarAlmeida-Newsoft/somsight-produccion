<!-- Error (semáforo naranja-rojo): Class "error" -->
<div class="alertas_modales error" style="display: none;">
    <div class="titulo_alerta_modal">
        @TranslatorHelper.TranslateTextByIdentifier("Semaforo_Modal_Error")
    </div>
    <div class="mensaje_alerta_modal">
        <div class="icono_alerta_modal"></div>
        <div class="textos_alerta_modal">
            <h2></h2>
            <p></p>
            <a href="" class="boton_alerta_modal">
                @TranslatorHelper.TranslateTextByIdentifier("Semaforo_Boton_Ok")
            </a>
        </div>
    </div>
</div>
<!-- Capa opacidad fondo -->
<div class="opacidad_alertas_modales" style="display: none;"></div>

<script>
    //Codigo por Newsoft 2018/02/12
    var semaphore = {
        showSuccess: function (titulo, parrafo, onOk) {
            $("#modalSuccess .row h2").text(titulo)
            $("#modalSuccess .row p").text(parrafo)
            document.getElementById('boton_alerta_modal_success').addEventListener("click", onOk);

            $('#modalSuccess').modal({ backdrop: "static" }, { keyboard: false });
        },
        showAtention: function (titulo, parrafo, onOk, onCancel) {
            $("#modalAttention .row h2").text(titulo)
            $("#modalAttention .row p").text(parrafo)
            document.getElementById('boton_alerta_modal_atention').addEventListener("click", onOk);
            document.getElementById('boton_cancel_alerta_modal_atention').addEventListener("click", onCancel);

            $('#modalAttention').modal({ backdrop: "static" }, { keyboard: false });
            


        },
        showError: function (titulo, parrafo) {
            $(".alertas_modales.error .textos_alerta_modal h2").text(titulo)
            $(".alertas_modales.error .textos_alerta_modal p").text(parrafo)
            $(".alertas_modales.error").show();
            $(".opacidad_alertas_modales").show();
        },
    };

    /*---Cierra alertas modales (semáforo) (2018-02-08)---*/
    $(".boton_alerta_modal, .boton_cancel_alerta_modal").click(function () {
        $(".alertas_modales, .opacidad_alertas_modales").hide();
        return false;
    });

</script>
